<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="24dp"
    tools:context="org.sorz.lab.tinykeepass.FingerprintDialogFragment">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fingerprint_description"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:id="@+id/textView" />

    <ImageView
        android:id="@+id/imageFingerprintIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_fp_40px"
        app:layout_constraintStart_toStartOf="@+id/textView"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textFingerprintStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/fingerprint_hint"
        android:textColor="@color/hint"
        app:layout_constraintBottom_toBottomOf="@+id/imageFingerprintIcon"
        app:layout_constraintStart_toEndOf="@+id/imageFingerprintIcon"
        app:layout_constraintTop_toTopOf="@+id/imageFingerprintIcon" />

</android.support.constraint.ConstraintLayout>
